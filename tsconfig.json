{
	"compileOnSave": false,
	"files": [
		"index.ts",

	],
	"include": [
		"./*.ts",
		"./**/*.ts"
	],
	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "./dist/out-tsc",
		"declaration": false,
		"module": "commonjs",
		"downlevelIteration": true,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es2020",
		"alwaysStrict": true,
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es2020",
			"dom"
		],
		"resolveJsonModule": true,
		"types": ["node"],
	}
}
